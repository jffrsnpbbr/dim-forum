<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Categories</th>
                <th>Comments Count</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each_with_index do |post, index| %>
            <tr>
                <td>
                  <% if index <= 2 %>
                    <span class="badge rounded-pill  bg-danger">&#128293; HOT </span>
                  <% end %>
                  <%= link_to post.title, post_path(post.post_id), class: 'mx-2' %></td>
                <td>
                    <% post.categories.each do |category| %>
                        <span class="badge bg-secondary rounded-pill"><%= category.name %></span>
                    <% end %>
                </td>
                <td><%= link_to "#{post.comments_count} Comments", post_comments_path(post.post_id) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<div class="container">
    <%= link_to 'New Post', new_post_path, class: "btn btn-dark"%>
</div>