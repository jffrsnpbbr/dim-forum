<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Categories</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <td><%= link_to post.title, post_path(post) %></td>
                <td>
                    <% post.categories.each do |category| %>
                        <span class="badge bg-secondary"><%= category.name %></span> 
                    <% end %>
                </td>
                <td><%= link_to 'Comments', post_comments_path(post) %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<div class="container">
    <%= link_to 'New Post', new_post_path, class: "btn btn-dark"%>
</div>