<div class="container">
    <h1><%= @post.title %></h1>
    <h2><%= @post.address %></h2>
    <p><%= @post.content %></p>
    <div class="d-grid gap-2 d-md-block">
        <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-outline-dark' %>
        <%= button_to 'Delete', post_path(@post), method: :delete, class: 'btn btn-outline-danger', form: { style: 'display: inline;' }  %>
    </div>
</div>