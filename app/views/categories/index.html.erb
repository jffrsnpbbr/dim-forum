<h1>Categories</h1>
<table class="table">
  <thead>
    <tr>
      <th>Category<th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to :edit, edit_category_path(category), class: 'btn btn-outline-dark' %>
          <%= button_to :delete, category_path(category), method: :delete, form: { class: 'd-inline'}, class: 'btn btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'new', new_category_path, class: 'btn btn-outline-dark' %>